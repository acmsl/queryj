  <dependencies>

    <dependency>
      <groupId>acmsl-commons</groupId>
      <artifactId>commons</artifactId>
      <version>0.5.5b10</version>
      <url>http://maven.acm-sl.com/commons</url>
    </dependency>

    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>

    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.6.1</version>
      <url>http://ant.apache.org</url>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
    </dependency>

    <dependency>
      <groupId>junitdoclet</groupId>
      <artifactId>junitdoclet-acmsl</artifactId>
      <version>1.0.2</version>
      <url>http://junitdoclet.sourceforge.net</url>
    </dependency>

    <dependency>
      <groupId>mysql-connector-java</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>2.0.14-bin</version>
      <url>http://www.mysql.com</url>
    </dependency>

    <dependency>
      <groupId>rmijdbc</groupId>
      <artifactId>rmijdbc</artifactId>
      <version>3.0.1</version>
      <url>http://www.objectweb.org</url>
    </dependency>

    <dependency>
      <groupId>commons-digester</groupId>
      <artifactId>commons-digester</artifactId>
      <version>1.4.1</version>
      <url>http://jakarta.apache.org/commons/digester</url>
    </dependency>

    <dependency>
      <groupId>jta</groupId>
      <artifactId>jta</artifactId>
      <version>1.0</version>
      <url>http://java.sun.com</url>
    </dependency>

    <dependency>
      <groupId>oro</groupId>
      <artifactId>oro</artifactId>
      <version>2.0.7</version>
      <url>http://jakarta.apache.org/oro</url>
    </dependency>

  </dependencies>

  <build>

    <nagEmailAddress>
      jsanleandro@yahoo.es
    </nagEmailAddress>

    <sourceDirectory>../../java/</sourceDirectory>

    <unitTestSourceDirectory>../../java</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>

    <aspectSourceDirectory/>

    <!-- Unit test cases -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/RepositoryTest.java</exclude>
      </excludes>
    </unitTest>
              
    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <includes>
        <include>*.xsd</include>
        <include>log4j.properties</include>
      </includes>
    </resources>

    <!-- Integration unit test cases -->
    <integrationUnitTest/>

    <jars/>

  </build>

  <reports>
    <report>maven-changelog-plugin</report>
    <report>maven-changes-plugin</report>
    <!-- We're getting out-of-memory
    <report>maven-checkstyle-plugin</report>
    -->
    <!--
      PMD makes the site generation crash if no errors are
      found. It's better to do it manually.
    <report>maven-pmd-plugin</report>
    -->
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jdepend-plugin</report>
    <report>maven-junit-report-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-license-plugin</report>
    <!-- We're getting out-of-memory
    <report>maven-linkcheck-plugin</report>
    -->
    <report>maven-tasklist-plugin</report>
    <!--
      JellyDoc makes the site generation crash if no errors are
      found. It's better to do it manually.
    <report>maven-jellydoc-plugin</report>
    -->
  </reports>
</project>
